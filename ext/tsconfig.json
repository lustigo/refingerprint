{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "Classic",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // You have to explicitly set @types to get DefinitelyTyped type definitions
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    // "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "**.ts", "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}