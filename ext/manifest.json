{

    "manifest_version": 2,
    "name": "ReFingerprint",
    "version": "1.0",

    "description": "WebExtension f√ºr ReFingerprint",

    "icons": {
        "48": "icons/logo.png"
    },

    "content_scripts": [{
        "matches": ["*://localhost/*","https://survey.lifeofensidias.de:444/*"],
        "js": ["dist/bundle.js"]
    }],

    "background": {
        "scripts": ["dist/background.js"],
        "persistent": false
    },

    "permissions": [
        "cookies",
        "downloads",
        "downloads.shelf",
        "*://*.google.com/*",
        "*://*.doubleclick.net/*"
    ]

}
